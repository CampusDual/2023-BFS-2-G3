<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
        xmlns="http://www.ontimize.com/schema/jdbc"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
        catalog=""  table="MESSAGES"
        datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
    <DeleteKeys>
        <Column>M_ID</Column>
    </DeleteKeys>
    <UpdateKeys>
        <Column>M_ID</Column>
    </UpdateKeys>
    <Queries>
        <Query id="allDetailMessages">
            <!--<AmbiguousColumns>
                <AmbiguousColumn name="C_ID" prefix="C"  />
                <AmbiguousColumn name="A_ID" prefix="A"  />
                <AmbiguousColumn name="USER_" prefix="U" />
            </AmbiguousColumns>-->
            <Sentence>
                    <![CDATA[
                    WITH TEMPORAL AS (
                        SELECT
                            M.M_MESSAGE, M.U_EMITTER,C.C_ID,A.A_ID,A.USER_,M.M_ID
                        FROM MESSAGES M
                        INNER JOIN CONVERSATIONS C ON M.C_ID = C.C_ID
                        INNER JOIN ANNOUNCES A ON C.A_ID = A.A_ID
                        INNER JOIN TUSER U ON U.USER_ = A.USER_
                    )
                    SELECT #COLUMNS#
                    FROM TEMPORAL
                    #WHERE#
                ]]>

            </Sentence>
        </Query>
        <Query id="lastConversationMessages">
            <AmbiguousColumns>
                <AmbiguousColumn name="C_ID" prefix="C"  />
                <AmbiguousColumn name="A_ID" prefix="A"  />
                <AmbiguousColumn name="USER_" prefix="U" />
                <AmbiguousColumn name="M_ID" prefix="M"  />
            </AmbiguousColumns>
            <Sentence>
                <![CDATA[
                    with TEMPORAL as (
                        select
                            max(M.M_ID) as M_ID
                        from
                            MESSAGES M
                        inner join CONVERSATIONS C on
                            M.C_ID = C.C_ID
                        group by
                            C.C_ID
                        )
                        select
                            #COLUMNS#
                        from
                            TEMPORAL T
                        INNER JOIN MESSAGES M ON
                        T.M_ID = M.M_ID
                        INNER JOIN CONVERSATIONS C ON M.C_ID = C.C_ID
                        INNER JOIN ANNOUNCES A ON C.A_ID = A.A_ID
                        INNER JOIN TUSER U ON U.USER_ = A.USER_
                        #WHERE#
                ]]>

            </Sentence>
        </Query>

    </Queries>

</JdbcEntitySetup>